#!/bin/bash
echo 'Checking coverage...'
pytest test_*.py -m "not e2etest" --ignore-glob=*manual* --cov-config=.coveragerc --cov=../synthpops --workers auto --durations=0

echo 'Creating HTML report...'
coverage html

echo 'Running report...'
coverage report

echo 'Report location:'
echo "`pwd`/htmlcov/index.html"
